<div class="join-org-page">
    <h1>Register with {{orgName}}</h1>
    <a class="home" href="/home">Back Home</a>
    <main>
        <form id="org-signin-form" method="POST" action="/signinorganization/{{orgName}}">
            <label for="password">Enter Password: </label>
            <input type="password" id="password" name="password">
            <label for="role">Role</label>
            <select name="role" id="role">
                <option value="member">Member</option>
                <option value="moderator">Moderator</option>
            </select>
            <button id="org_submit_button" name="org_submit_button" type="submit">Submit</button>
        </form>
        <script src='/public/js/form_validate.js'></script>
    </main>
</div>